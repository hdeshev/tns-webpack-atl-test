{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": false
    },
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "disableFastEmit": false,
        "doTypeCheck": true,
        "useWebpackText": true
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}
